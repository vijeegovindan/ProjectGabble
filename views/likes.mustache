<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="main.css">
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <title>Gab Likes</title>
  </head>
  <body>
    <div class="wrapper">
      <div class="header">
        {{#sessionExist}}
          <span class="welcome">Welcome {{userFullName}}</span>
        {{/sessionExist}}
        <span>
          <nav>
            {{^sessionExist}}
              <a href="/login">Login</a>
              <a href="/signup">Sign Up</a>
            {{/sessionExist}}
            {{#sessionExist}}
              <a href="/home">Gabble</a>
              <a href="/logout">Log out</a>
            {{/sessionExist}}
          </nav>
        </span>
        <span class="title">Gab</span>
      </div>

      {{#sessionExist}}
      <div class="fields">
        <ul>
          {{#allMsg}}
            <li>{{#gabs}}<b>{{name}}</b>{{/gabs}} : {{messages}}</li>
            <li>{{createdAt}}</li>
          {{/allMsg}}
        </ul>
        <hr>
        {{#getNumberOfLikes}}
        <p>Liked by <b>{{getNumberOfLikes}}</b> users</p>
        {{#likedUsersList}}
          <p>{{#likeusers}}{{name}}{{/likeusers}}</p>
        {{/likedUsersList}}
        {{/getNumberOfLikes}}
      </div>
      {{/sessionExist}}
    </div>
  </body>
</html>
